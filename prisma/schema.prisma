datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String      @id @default(uuid())
  name       String
  phone      String      @unique
  email      String?     @unique
  password   String
  role       String      @default("client")
  tokenId         String?     @unique
  tokenExpiration DateTime?
  createdAt  DateTime    @default(now())
}
