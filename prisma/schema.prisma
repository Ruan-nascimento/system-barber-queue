datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String      @id @default(uuid())
  name            String
  phone           String      @unique
  email           String?     @unique
  color           String?
  password        String
  role            String      @default("client")
  tokenId         String?     @unique
  tokenExpiration DateTime?
  createdAt       DateTime    @default(now())
}

model Barber {
  id        String   @id @default(uuid())
  name      String
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id          String   @id @default(uuid())
  name        String 
  price       Float     
  averageTime Int      
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Queue {
  id        String   @id @default(uuid())
  userId    String  
  barberId  String   
  status    String   @default("waiting")
  position  Int      @default(0) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QueueService {
  id        String   @id @default(uuid())
  queueId   String 
  serviceId String   
  createdAt DateTime @default(now())
}

model History {
  id         String   @id @default(uuid())
  userId     String  
  barberId   String  
  totalValue Float           
  createdAt  DateTime @default(now())
}

model HistoryService {
  id        String   @id @default(uuid())
  historyId String
  createdAt DateTime @default(now())
}